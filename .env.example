# NHL Prediction Pipeline Environment Variables
# Copy to .env and fill in your values

# PostgreSQL Database Connection (required)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/sports_analytics

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Optional: DailyFaceoff cache TTL in hours (default: 6)
DAILYFACEOFF_CACHE_TTL_HOURS=6

# LLM Configuration for Insights Generation
# OpenRouter (recommended - supports many models)
OPENROUTER_API_KEY=sk-or-v1-your-key-here
OPENROUTER_MODEL_NAME=anthropic/claude-3.5-sonnet

# Alternative: Anthropic API (direct)
# ANTHROPIC_API_KEY=sk-ant-your-key-here

# Alternative: OpenAI API
# OPENAI_API_KEY=sk-your-key-here
